
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IMTEXA</title>
    <link rel="shortcut icon" type="image/png" href="~/Images/logos/LogoSGRH.png" />

    <link rel="stylesheet" href="~/Styles/libs/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Styles/libs/rin.css" />
    <link rel="stylesheet" href="~/Styles/Home.css">
    <link rel="stylesheet" href="~/Styles/Controls/oNotify.css" />
    <link rel="stylesheet" href="~/Styles/Controls/oDialog.css" />

    <link rel='stylesheet' href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.6.0/uicons-regular-rounded/css/uicons-regular-rounded.css'>

</head>
<body>

    <div class="sidebar">
        <div class="logo-details">
            <i class='bx bx-layer'></i>
            <span class="logo_name">IMTEXA</span>
        </div>
        <div>
            <div class="profile-details">
                <div class="profile-content">
                    <img id="imgAvatar" alt="profileImg" src="~/Images/profile/user-1.jpg" />
                </div>
                <div class="name-job">
                    <div id="oNombre" class="profile_name">...</div>
                    <div id="oApellido" class="job">...</div>
                </div>
            </div>
        </div>
        <div id="divMenu">

        </div>
    </div>
    <section class="home-section">
        <div class="home-content">
            <nav class="main-header navbar navbar-expand navbar-white navbar-light z-navbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <i class='bx bx-menu z-menu hand'></i>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        <a id="btnHelp" class="nav-link" data-widget="Helper" href="#" role="button">
                            <i class="fa fa-question-circle-o" style="font-size: 1.1rem;line-height: 20px;color: #829fd5;"></i>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a id="btnFullScreen" class="nav-link" data-widget="fullscreen" href="#" role="button">
                            <i class="fa fa-arrows-alt"></i>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a id="btnSignOut" class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button" style="padding: 8px 8px 0px 8px;">
                            <i class="bx bx-exit fs-6" style="font-size: 1.3rem !important;"></i>
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Content-->
            <div id="divContent" class="content-wrapper">
                <iframe id="ifrPagina" style="width:100%;height:100%"></iframe>
            </div>

            <footer id="divFooter" class="main-footer">
                <div class="float-right d-none d-sm-block">
                    <b>Versión</b> @ViewData["_Version"]
                </div>
                <div class="float-right d-none d-sm-block" style=" margin-right: 30px; ">
                    <b>Ambiente</b> @ViewData["_Ambiente"]
                </div>
                <strong>Copyright © 2018-2024 PROVIAS</strong> Todos los derechos reservados.
            </footer>
        </div>
    </section>

    <div id="divPopupContainerLoad" class="PopupContainer">
        <div class="ring">
            .. Cargando ..
            <span></span>
        </div>
    </div>

    <!-- Modals -->
    <div id="divVisorContainer" class="PopupContainer">
        <div id="divVisor" class="PopupWindow">
            <div id="divBarra" class="BarraTitulo">
                <i class="fa fa-folder-open" aria-hidden="true"></i>
                <span id="spnBarraTituloVisor">##</span>
                <i id="btnCerrarVisor" class="fa fa-times IconoMedio" aria-hidden="true" style="float:right" title="Cerrar Ventana"></i>
            </div>
            <div id="divPopupVisor" class="Cuerpo">
                <iframe id="ifrVisor" style="width:100%; height:100%; min-height:80vh"></iframe>
            </div>
        </div>
    </div>

    <div id="Notify" class="notify">
    </div>

    <input id="hdfRaiz" type="hidden" value='@Url.Content("~")' />
    <input id="hdfHelp" type="hidden" value='' />

    <script src="~/Scripts/System/Global.js"></script>
    <script src="~/Scripts/_Tools/oHttp.js"></script>
    <script src="~/Scripts/System/Core.js"></script>
    <script src="~/Scripts/Controls/oDialog.js"></script>
    <script src="~/Scripts/Home/Home.js"></script>

</body>
</html>
